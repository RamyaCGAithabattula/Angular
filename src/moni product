list.ts

import { Component, OnInit } from '@angular/core';
import { SproductService } from './sproduct.service';

@Component({
  selector: 'app-list',
  templateUrl: './list.component.html',
  styleUrls: ['./list.component.css']
})
export class ListComponent implements OnInit {
  
  products;
  constructor(private sproductservive:SproductService) { }
  ngOnInit() {
    this.sproductservive.getSame().subscribe(data=>this.products=data);
  }

    
    
  uid: number;
  uname: string;
  ucost: number;
  uopt: any;

  addproduct(pid: "number", pname: "string", pcost: "number") {
    this.products.push({ QproductId: pid, QproductName: pname, Qcost: pcost });
    alert("product added succesfully");

  }

  deleteproduct(item) {
    this.products.splice(this.products.indexOf(item), 1);
  }



  updateproduct(item) {
    this.uid = item.QproductId;
    this.uname = item.QproductName;
    this.ucost = item.Qcost;
    this.uopt = item;

  }

  updateproductNew(uid: number, uname: string, ucost: number) {
    this.uopt.QproductId = uid;
    this.uopt.QproductName = uname;
    this.uopt.Qcost = ucost;
  }
}

ser ys
import { Injectable } from '@angular/core';
import { HttpClient } from '@angular/common/http';
import { Observable } from 'rxjs';
import { Iproduct } from './iproduct';

@Injectable({
  providedIn: 'root'
})
export class SproductService {

  constructor(private http:HttpClient) { }
  private _url:string="./assets/product.json";
  
    getSame():Observable<Iproduct[]>{
      return this.http.get<Iproduct[]>(this._url);


  }
}

iproducts
export interface Iproduct {
    "QproductId": number;
    "QproductName":string;
    "Qcost":number;
}

app roting module.ts

const routes: Routes = [
  {path:'home',component:HomeComponent},
  {path:'list',component:ListComponent},
  {path:'success',component:SuccessComponent}
];

@NgModule({
  imports: [RouterModule.forRoot(routes)],
  exports: [RouterModule]
})
export class AppRoutingModule { }
export const routingComponents = [HomeComponent,ListComponent,SuccessComponent]

